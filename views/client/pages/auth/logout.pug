extends ../../layouts/auth(logout).pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug


block main
  +alert-error(5000)
  +alert-success(5000)
  body
    // Animated Wave Background
    .ocean
      .wave
      .wave
    // Log In Form Section
    section
      .container#container
        .form-container.sign-up-container
          form(
              action=`/auth/logout`
              method="POST"
          )
            h1 Sign Up
            .social-container
              a(href='https://Github.com/tai03102004', target='_blank', class='social')
                i.fab.fa-github
              a(href='https://www.facebook.com/profile.php?id=100024361560751', target='_blank', class='social')
                i.fab.fa-codepen
              a(href='dinhductai2004@gmail.com', target='_blank', class='social')
                i.fab.fa-google
            span Or use your Email for registration
            label
              input(
                type='text', 
                placeholder='Name'
                id ='name'
                required
                class= "form-control"
                name = "name"
              )
            label
              input(
                type='text', 
                placeholder='Tên đăng nhập'
                id ='nameId'
                required
                class= "form-control"
                name = "name_id"
              )
            div(class="field")
              input(type="password" class="input1" name="password" required placeholder="Password")
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="eye eye-close">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
              </svg>

              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="eye eye-open hidden">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            label
              input(
                type='text', 
                placeholder='Số điện thoại'
                id ='phone'
                required
                class= "form-control"
                name = "phone"
              )
            label
              input(
                type='text', 
                placeholder='Email'
                id ='email'
                required
                class= "form-control"
                name = "email"
                onchange="chooseFile(this)"
              )
            label
              input(type="file" id="imageFile" accept="image/gif,image/jpeg,image/png" placeholder="Choose an image" onchange="previewImage(event)")
              img(id="avatarPreview" name="avatar" src="" alt="Avatar Preview")

            button(
              style='margin-top: 9px'
              id = "buttonClick"
            ) Sign Up
        .overlay-container
          .overlay
            .overlay-panel.overlay-right
              h1 Log in
              p Sign in here if you already have an account
              button.ghost.mt-5#signIn Sign In

            .overlay-panel.overlay-left
              h1 Create, Account!
              p Sign up if you still don't have an account
              button.ghost#signUp 
                form(
                  action=`/auth/logout`
                  method="POST"
                ) Sign Up
  script(src="/js/auth(logout).js")
  