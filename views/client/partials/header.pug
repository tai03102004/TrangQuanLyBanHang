include ../mixins/search.pug
include ../mixins/auth.pug
include ../mixins/sub-menu.pug

header.header
    nav.navbar
        .container
            .row.align-items-center
                .col-3 
                    .inner-logo 
                        a(href="/")
                            img(src="/images/logo.svg",alt="Logo")
                .col-9 
                    .inner-menu-1 
                        ul.nav(style="margin-right: 190px")
                            li(style="font-size: 14px") 
                                a(href="/") Trang chủ
                            li(class="sub-menu",style="font-size: 14px") 
                                - const pathProduct = "/products";
                                a(href="products") Sản phẩm
                                if(layoutCategoryProducts)
                                    +sub-menu(layoutCategoryProducts, pathProduct)
            .row(style="margin-left: -190px;")
                .col-9(style = "top :40px")  
                    +search()
                .col-9(style="margin-left: 250px;margin-bottom :40px")
                    .inner-menu 
                        ul.nav
                            +auth(user)
                    
